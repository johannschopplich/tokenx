{
  "name": "tokenwise",
  "type": "module",
  "version": "0.3.2",
  "packageManager": "pnpm@8.15.1",
  "description": "GPT token estimation and context size utilities without a full tokenizer",
  "author": "Johann Schopplich <pkg@johannschopplich.com>",
  "license": "MIT",
  "homepage": "https://github.com/johannschopplich/tokenwise#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/tokenwise.git"
  },
  "bugs": {
    "url": "https://github.com/johannschopplich/tokenwise/issues"
  },
  "keywords": [
    "ai",
    "gpt",
    "token",
    "tiktoken"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "docs:generate": "tsx scripts/generateTable.ts",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp --commit --push --tag",
    "test": "vitest",
    "test:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "@types/node": "^20.11.10",
    "bumpp": "^9.3.0",
    "eslint": "^8.56.0",
    "gpt-tokenizer": "^2.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vitest": "^1.2.2"
  }
}
